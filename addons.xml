<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.reaperwizard" name="Reaper Wizard" version="0.2.1" provider-name="Reddit_Reaper">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Reaper Wizard</summary>
    <description lang="en">Reaper Wizard allows you to get access to the latest Reaper Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.redditreaper" name="Reddit Reaper Repository" version="1.2" provider-name="Reddit Reaper">
	<extension point="xbmc.addon.repository" name="Reddit Reaper Repository">
		<info compressed="false">https://raw.githubusercontent.com/reddit-reaper/Addons/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/reddit-reaper/Addons/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/reddit-reaper/Addons/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Reddit Reaper's Kodi Build Repository</summary>
		<description>Reaper Builds</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
